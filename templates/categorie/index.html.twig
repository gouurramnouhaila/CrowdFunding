{% extends 'backNavBar.html.twig' %}

{% block title %}Hello Categories!{% endblock %}

{% block body %}

  <div class="container row-cols-10 mt-5">
    <table class="table mt-lg-5">
      <thead>
      <tr class="table-secondary p-4">
        <th  class="text-center p-4" colspan="6">Categories Setting</th>
      </tr>
      <tr class="table-active">
        <th scope="col" class="p-4">Name</th>
        <th scope="col" class="p-4">Title</th>
        <th scope="col" class="p-4">Description</th>
        <th scope="col" class="p-4">Edit</th>
        <th scope="col" class="p-4">Delete</th>
      </tr>
      </thead>
      <tbody>
      {% for category in categories %}
        <tr class="table-light">
          <td class="p-3">{{ category.name}}</td>
          <td class="p-3">{{ category.title}}</td>
          <td class="p-3">{{ category.description}}</td>
          <td class="p-3">
            <a href="#" class="text-muted">
              <i class="bi bi-pen-fill"></i>
            </a>
          </td>
          <td class="p-3">
            <a href="#" class="text-muted">
              <i class="bi bi-trash-fill"></i>
            </a>
          </td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>

{% endblock %}